<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.ffm.system.farmedfish.FarmedFishMapper">
    <insert id="insert"
            parameterType="FarmedFish">
        INSERT INTO FARMED_FISH
            (`NAME`
            , `TEMPERATURE`
            , `PH`
            , `OXYGEN`
            , `FEEDING_TIME`
            , `FEEDING_AMOUNT`)
        VALUES (#{name}
                , #{temperature}
                , #{ph}
                , #{oxygen}
                , #{feedingTime}
                , #{feedingAmount});
    </insert>

    <select id="selectAll"
            parameterType="FarmedFish"
            resultType="FarmedFish">
        SELECT NO
            , NAME
             , TEMPERATURE
             , PH
             , OXYGEN
        FROM FARMED_FISH
        <where>
            <if test="name != null and name != ''">
                AND NAME = #{name}
            </if>
        </where>
    </select>

    <select id="selectByNo"
            parameterType="FarmedFish"
            resultType="FarmedFish">
        SELECT *
        FROM FARMED_FISH
        WHERE NO = #{no}
    </select>

    <update id="updateByNo"
            parameterType="FarmedFish">
        UPDATE TABLE FARMED_FISH
        SET ACTIVE = 'N'
        WHERE NO = #{no}
    </update>
</mapper>